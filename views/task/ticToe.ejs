<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <style>
        body {
            background-color: #FFEBD8;
        }

        table {
            border: 2px solid black;
            border-collapse: collapse;
            margin: auto;
            margin-top: 100px;
            position: relative;
            bottom:130px;
        }

        td {
            border: 2px solid black;
            width: 150px;
            height: 150px;
            background-color: #B4BDFF;
            text-align: center;
            font-size: 50px;
            ;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }
        .header{
            position: relative;
            left:350px;
        }
        .header2{
            position: relative;
            left:115px;
            bottom:70px;
        }
        .header1{
            position: relative;
            left:215px;
            bottom:10px;
        }
        
    </style>
</head>

<body onload="event_start()">
    <div class="header">
        <div class="header1">
            <h1>TicToe</h1>
        </div>
        <br><br>
        <div class="header2">
            <h2>4DEV058 - Darshan Parekh</h2>
        </div>
    </div>
    <table>
        <tr>
            <td id="v1"></td>
            <td id="v2"></td>
            <td id="v3"></td>
        </tr>
        <tr>
            <td id="v4"></td>
            <td id="v5"></td>
            <td id="v6"></td>
        </tr>
        <tr>
            <td id="v7"></td>
            <td id="v8"></td>
            <td id="v9"></td>
        </tr>
    </table>
    <script>

        let arr = [];
        let row = 3;
        let col = 3;
        let h = 0


        for (let i = 0; i < row; i++) {
            arr[i] = [];
            for (let j = 0; j < col; j++) {
                arr[i][j] = h++;
            }
        }

        function event_start() {

            table = document.getElementsByTagName("table");
            td = table[0].getElementsByTagName("td");
            let k = 0;
            for (let i = 0; i < 3; i++) {
                for (let j = 0; j < 3; j++) {
                    arr[i][j] = td[k];
                    k++;
                }
            }
            let r = 1;
            for (let i = 0; i < 3; i++) {
                for (let j = 0; j < 3; j++) {
                    arr[i][j].addEventListener("click", () => {

                        if (arr[i][j].innerHTML == "") {
                            if (r % 2 == 0) {
                                arr[i][j].innerHTML = "X";
                            }
                            else {
                                arr[i][j].innerHTML = "0";
                            }
                        }
                        if (is_win_match() == true) {
                            alert("Play again!");
                            location.reload();
                        }
                        else if (is_boxes_full() == true) {
                            alert("Draw match . Play again!");
                            location.reload()
                        }

                        r++;

                    });

                }
            }


        }

        function is_win_match() {
            v1 = document.getElementById("v1").innerHTML;
            v2 = document.getElementById("v2").innerHTML;
            v3 = document.getElementById("v3").innerHTML;
            v4 = document.getElementById("v4").innerHTML;
            v5 = document.getElementById("v5").innerHTML;
            v6 = document.getElementById("v6").innerHTML;
            v7 = document.getElementById("v7").innerHTML;
            v8 = document.getElementById("v8").innerHTML;
            v9 = document.getElementById("v9").innerHTML;

            if ((v1 == "X" && v2 == "X" && v3 == "X") || (v4 == "X" && v5 == "X" && v6 == "X") || (v7 == "X" && v8 == "X" && v9 == "X")
                || (v1 == "X" && v4 == "X" && v7 == "X") || (v2 == "X" && v5 == "X" && v8 == "X") || (v3 == "X" && v6 == "X" && v9 == "X")
                || (v1 == "X" && v5 == "X" && v9 == "X") || (v3 == "X" && v5 == "X" && v7 == "X")) {
                alert("Player X Win!!");
                return true;
            }
            if ((v1 == "0" && v2 == "0" && v3 == "0") || (v4 == "0" && v5 == "0" && v6 == "0") || (v7 == "0" && v8 == "0" && v9 == "0")
                || (v1 == "0" && v4 == "0" && v7 == "0") || (v2 == "0" && v5 == "0" && v8 == "0") || (v3 == "0" && v6 == "0" && v9 == "0")
                || (v1 == "0" && v5 == "0" && v9 == "0") || (v3 == "0" && v5 == "0" && v7 == "0")) {
                alert("Player 0 Win!!!");
                return true;
            }
            else {
                return false;
            }

        }
        function is_boxes_full() {
            v1 = document.getElementById("v1").innerHTML;
            v2 = document.getElementById("v2").innerHTML;
            v3 = document.getElementById("v3").innerHTML;
            v4 = document.getElementById("v4").innerHTML;
            v5 = document.getElementById("v5").innerHTML;
            v6 = document.getElementById("v6").innerHTML;
            v7 = document.getElementById("v7").innerHTML;
            v8 = document.getElementById("v8").innerHTML;

            if ((v1 == "" || v2 == "" || v3 == "" || v4 == "" || v5 == "" || v6 == "" || v7 == "" || v8 == "" || v9 == "")) {
                // alert("Player X Win!!");
                return false;
            }
            else {
                return true;
            }
        }

    </script>
</body>

</html>